    'RedHat': {
        'module_dependencies': {
            'pkgs': ['libffi-devel', 'openssl-devel', 'gcc', 'python-devel', 'curl'],
            'pip_deps': ['pyopenssl', 'hvac', 'testinfra']
        }
    },
}, grain='os_family', merge=salt.pillar.get('vault:overrides'), base='default') %}

