{% set vault = salt.grains.filter_by({
    'default': {
        'architecture_dict': {
            'x86_64': 'amd64',
            'amd64': 'amd64',
            'i386': '386',
            'i686': '386'
        },
        'service': 'vault',
        'ssl_directory': '/etc/salt/ssl',
        'ssl': {},
        'config': {
            'listener': {
                'tcp': {
                    'address': 'localhost:8200',
                    'tls_cert_file': '/etc/salt/ssl/certs/vault.example.com.crt',
                    'tls_key_file': '/etc/salt/ssl/certs/vault.example.com.key'
                }
            },
        },
        'version': '0.6.0',
        'secret_shares': 5,
        'secret_threshold': 3,
        'unseal': True,
        'pgp_keys': [],
        'keybase_users': []
